{
  "name": "qgenutils",
  "version": "1.0.0",
  "description": "QGenUtils - Security-first Node.js utility library",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.cjs,.ts --fix",
    "lint-check": "eslint . --ext .js,.cjs,.ts",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,cjs,ts}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "node"
    ],
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "no-unused-vars": "error",
      "no-undef": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 2],
      "brace-style": ["error", "1tbs"],
      "curly": ["error", "all"],
      "eqeqeq": ["error", "always"],
      "no-trailing-spaces": "error",
      "eol-last": ["error", "always"]
    }
  }
}