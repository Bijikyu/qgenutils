{
  "name": "qgenutils",
  "version": "1.0.3",
  "description": "A security-first Node.js utility library providing authentication, HTTP operations, URL processing, validation, datetime formatting, and template rendering. Designed as a lightweight alternative to heavy npm packages with comprehensive error handling and fail-closed security patterns. Provides datetime formatting, HTTP helpers, URL manipulation, authentication checks, field validation, and view rendering with robust error handling",
  "type": "module",
  "main": "dist/index-core.js",
  "types": "dist/index-core.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index-core.d.ts",
      "import": "./dist/index-core.js"
    },
    "./full": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && node scripts/copy-config.mjs",
    "prebuild": "rm -rf dist",
    "build:prod": "NODE_ENV=production npm run build",
    "build:watch": "tsc --watch",
    "dev": "npm run build:watch",
    "test": "node qtests-runner.mjs",
    "test:watch": "jest --watch --config tests/jest.config.js --rootDir .",
    "test:coverage": "jest --coverage --config tests/jest.config.js --rootDir .",
    "test:unit": "jest tests/unit --config tests/jest.config.js --rootDir .",
    "test:integration": "jest tests/integration --config tests/jest.config.js --rootDir .",
    "test:performance": "node --expose-gc scripts/simple-performance-benchmark.mjs",
    "pretest": "npm run build && node scripts/ensure-runner.mjs",
    "lint": "eslint . --ext .ts,.js --fix",
    "start": "NODE_ENV=production node dist/index.js",
    "start:demo": "node examples/simple-demo-server.cjs",
    "start:demo:full": "node examples/demo-server.cjs",
    "start:demo:auth": "node examples/auth-app.cjs",
    "health": "npm run build && npm test && npm run audit:security",
    "analyze": "npm run build && npm run test:performance && npm run test:coverage",
    "setup": "node scripts/setup-development.cjs",
    "audit": "npm audit && npm outdated",
    "clean": "rm -rf dist node_modules/.cache && npm run build",
    "size": "du -sh dist/ && find dist/ -name '*.js' -exec wc -c {} + | sort -n",
    "benchmark": "node scripts/performance-benchmark.cjs",
    "dev:demo": "npm run dev & npm run start:demo",
    "postinstall": "echo 'âœ… QGenUtils installed successfully'"
  },
  "keywords": [
    "utilities",
    "security",
    "fail-closed",
    "lightweight",
    "datetime",
    "http",
    "url",
    "validation",
    "input-validation",
    "authentication",
    "passport",
    "express",
    "nodejs",
    "formatting",
    "duration",
    "headers",
    "header-cleaning",
    "content-length",
    "error-handling",
    "logging",
    "qerrors",
    "response-utils",
    "ejs",
    "api",
    "web-development",
    "middleware",
    "proxy",
    "sanitization",
    "alternative",
    "minimal-dependencies"
  ],
  "author": "Q",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/big.js": "^6.2.2",
    "@types/lodash": "^4.17.21",
    "@types/stream-json": "^1.7.8",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "big.js": "^7.0.1",
    "clsx": "^2.1.1",
    "convict": "^6.2.4",
    "date-fns": "^4.1.0",
    "express-rate-limit": "^8.2.1",
    "heap": "^0.2.7",
    "helmet": "^8.1.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.7",
    "qerrors": "^1.2.7",
    "safe-compare": "^1.1.4",
    "sanitize-html": "^2.17.0",
    "stream-json": "^1.9.1",
    "tailwind-merge": "^3.4.0",
    "validator": "^13.15.23",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@bijikyu/csup": "^1.0.2",
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/heap": "^0.2.35",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.11",
    "@types/sanitize-html": "^2.16.0",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  }
}
