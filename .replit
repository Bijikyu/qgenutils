entrypoint = "index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Test Module"
author = 3706638
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node test.js"

[[workflows.workflow]]
name = "Run Tests"
author = 3706638
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm test"

[[workflows.workflow]]
name = "Test with Coverage"
author = 3706638
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:coverage"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm test"

[workflows.workflow.metadata]
outputType = "console"

[agent]
expertMode = true
